---
- name: Install Grafana dependencies
  apt:
    name: apt-transport-https
    state: present
    update_cache: yes

- name: Install Grafana from local .deb
  apt:
    deb: "{{ role_path }}/files/grafana-enterprise_9.6.4_amd64.deb"

- name: Ensure Grafana service is enabled and started
  systemd:
    name: grafana-server
    enabled: yes
    state: started

- name: Wait for Grafana to be up
  uri:
    url: http://localhost:3000
    status_code: 200
    validate_certs: no
  register: result
  until: result.status == 200
  retries: 10
  delay: 5

- name: Configure Prometheus data source
  copy:
    content: |
      apiVersion: 1
      datasources:
        - name: Prometheus
          type: prometheus
          access: proxy
          url: http://localhost:9090
          isDefault: true
    dest: /etc/grafana/provisioning/datasources/prometheus.yml
    mode: 0644

- name: Restart Grafana to apply datasource
  systemd:
    name: grafana-server
    state: restarted

